{% block header_content %}
<div class="row">
    <div class="span7">
        <h1>{{ 'about.description.title'|trans() }}</h1>
        <p>{{ 'about.description.line1'|trans() }}</p>
        <p>
            {{ 'about.description.line2'|trans() }}<br/>
