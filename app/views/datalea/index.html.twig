        <a href="{{ path('datalea_generate') }}" title="{{ 'about.try_datalea'|trans|capitalize }}" class="btn btn-large btn mt20"><i class="icon-beaker icon-large"></i>{{ 'about.try_it'|trans|capitalize }}</a>
