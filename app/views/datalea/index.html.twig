{% extends "base.html.twig" %}

{% set currentPage = 'homepage' %}
{% set bodyId = currentPage %}

{% block header_content %}
<div class="row">
    <div class="span7">
        <h1>{{ 'home.description.title'|trans() }}</h1>
        <p>{{ 'home.description.line1'|trans() }}</p>
        <p>{{ 'home.description.line2'|trans() }}</p>
        <p class="mt20">
            {{ 'home.based_on'|trans({'%name%': 'Francois Zaninotto'}) }} <a href="https://github.com/fzaninotto/Faker" target="_blank" class="faker-link" title="{{ 'Faker' }}">{{ 'Faker' }}</a>
        </p>
        <a href="{{ path('datalea_generate') }}" title="{{ 'home.try_datalea'|trans|capitalize }}" class="btn btn-large btn mt20"><i class="icon-beaker icon-large"></i> {{ 'home.try_it'|trans|capitalize }}</a>
        <a href="https://github.com/spyrit/datalea" class="btn btn-primary btn-large mt20 ml20" target="_blank" title="{{ 'home.fork_github'|trans|capitalize}}"><i class="icon-github-alt icon-large"></i> {{ 'home.fork_me'|trans|capitalize }}</a>
    </div>

    <div class="span4 offset1">
        <img src="/img/db.png" alt="{{ 'home.header.generate_data'|trans|capitalize }}" title="{{ 'home.header.generate_data'|trans|capitalize }}" />
    </div>
</div>
{% endblock header_content %}

{% block main_body %}

<section class="section">
    <div id="how-does-it-works" class="container">

        
        <div class="row title">
                <div class="span12">
                    <center><h2>{{ 'home.steps.title' | trans }}</h2></center>
                </div>
            </div>
        
        <div class="row content">
                
                <div class="span3">
                    <div class="circle">
                        <div class="icon">
                            <i class="icon-pencil"></i>
                        </div>
                        <div class="description">
                            {{ 'home.steps.1' | trans | raw }} 
                        </div>
                    </div>
                </div>
                
                <div class="span3">
                    <div class="circle">
                        <div class="icon">
                            <i class="icon-columns"></i>
                        </div>
                        <div class="description">
                           {{ 'home.steps.2' | trans | raw }} 
                        </div>
                    </div>
                </div>
                
                <div class="span3">
                    <div class="circle">
                        <div class="icon">
                            <i class="icon-cogs"></i>
                        </div>
                        <div class="description">
                            {{ 'home.steps.3' | trans | raw }} 
                        </div>
                    </div>
                </div>
                
                <div class="span3">
                    <div class="circle">
                        <div class="icon">
                            <i class="icon-cloud-download"></i>
                        </div>
                        <div class="description">
                            {{ 'home.steps.4.download' | trans | raw }} <br /><span style="color: #00a0dd ; "><i class="icon-plus-sign"></i> {{ 'home.steps.4.file' | trans | raw }} </span>
                        </div>
                    </div>
                </div>
            
            </div>
        
            <div class="row bonus">
                <div class="span12">
                    <center>
                        <span style="color: #00a5db;"><i class="icon-plus-sign"></i> {{ 'home.steps.bonus.title' | trans }} :</span>  {{ 'home.steps.bonus.description' | trans }}
                    </center>
                </div>
            </div>

        </div>
</section>

<hr />

<section class="section">
    <div class="container">

            <div class="row">
            
                <div class="span7">
                    
                    <h2>{{ 'home.how_it_works.title' | trans }}</h2>
                    
                    <div class="row">
                        
                        <div class="span7">
                            <h3>{{ 'home.how_it_works.screencast.title' | trans }}</h3>
                            <p>{{ 'home.how_it_works.screencast.text' | trans }}</p>
                        </div>
                        
                    </div>
                </div>
                
                <div class="span5" id="latest-news">
                    <div class="well">
                        <h2>{{ 'home.latest_news.title'|trans }}</h2>
                        
                        {% set i = 1 %}
                        <ul>
                        {% for i in range(1, 3) %}
                            <li><span class="date">{{ ('home.latest_news.news'~i~'_date') | trans | date('global.date_format'|trans) }}</span> - {{ ('home.latest_news.news'~i) | trans }}</li>
                            {% set i = i + 1 %}
                        {% endfor %}
                        </ul>
                    </div>
                </div>
            
            </div>

        </div>
</section>



<section class="gray section">
    <div class="container">

            <div class="row">
            
                <div class="span6">
                    
                    <h2>{{ 'home.faq.title' | trans }}</h2>
                    
                    <div class="accordion" id="faq-accordion">
                        
                        {% set i = 1 %}
                        
                        {% for i in range(1, 3) %}
                            <div class="">
                                <div class="accordion-heading">
                                    <a class="accordion-toggle" data-toggle="collapse" data-parent="#faq-accordion" href="#faq-question-{{ i }}">
                                    {{ ('home.faq.question'~i) | trans }}
                                    </a>
                                </div>
                                <div id="faq-question-{{ i }}" class="accordion-body collapse">
                                  <div class="accordion-inner">
                                      {{ ('home.faq.answer'~i) | trans }}
                                  </div>
                                </div>
                            </div>
                            
                            {% set i = i + 1 %}
                        {% endfor %}
                        
                    </div>
                    
                </div>
                
                <div class="span6">
                    <h2>{{ 'home.testimonial.title'|trans }}</h2>
                    
                    <div id="testimonial" class="carousel slide">
                        <div class="carousel-inner">
                          <div class="active item">
                              <h4 class="author">Charles SANQUER</h4>
                              <p class="quote"><i class="icon-quote-left"></i> {{ 'home.testimonial.1' | trans }} <i class="icon-quote-right"></i></p>
                          </div>
                          <div class="item">
                              <h4 class="author">Pierre-Yves STUCKI</h4>
                              <p class="quote"><i class="icon-quote-left"></i> {{ 'home.testimonial.2' | trans }} <i class="icon-quote-right"></i></p>
                          </div>
                        </div>
                        <a class="carousel-control right" href="#testimonial" data-slide="next"><i class="icon-chevron-right"></i></a>
                    </div>
                    
                </div>
            
            </div>

        </div>
</section>

{% endblock %}
