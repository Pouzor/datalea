<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="utf-8">
        <meta name="description" content="">
        <meta name="author" content="">
        <title>Datalea</title>
        <!--
        <link rel="shortcut icon" href="/favicon.ico">
        -->
        <!-- Bootstrap -->
        <link href="/css/bootstrap.min.css" rel="stylesheet">
        <link href="/css/font-awesome.min.css" rel="stylesheet">
        <!--[if IE 7]>
        <link rel="stylesheet" href="/css/font-awesome-ie7.min.css">
        <![endif]-->
        <style type="text/css">
            body {
                padding-top: 60px;
                padding-bottom: 40px;
            }
            .sidebar-nav {
                padding: 9px 0;
            }
        </style>

        <!-- Responsive -->
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="/css/bootstrap-responsive.css" rel="stylesheet">
        <link href="/select2/select2.css" rel="stylesheet">
        <link href="/css/styles.css" rel="stylesheet">
        <link href="/css/layout.css" rel="stylesheet">
    </head>
    {% set bodyId = bodyId|default('global') %}
    <body id="{{ bodyId }}">
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="{{ path('datalea_homepage') }}">{{ 'datalea'|capitalize }} <span>{{ 'base.subtitle'|trans|capitalize }}</span></a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            {% set currentPage = currentPage|default('home') %}
                            <li class="{% if currentPage == 'homepage' %}active{% endif %}"><a href="{{ path('datalea_about') }}" title="{{ 'menu.about' | trans | capitalize }}">{{ 'menu.about' | trans | capitalize }}</a></li>
                            <li class="{% if currentPage == 'generate' %}active{% endif %}"><a href="{{ path('datalea_generate') }}" title="{{ 'menu.generate' | trans | capitalize }}">{{ 'menu.generate' | trans | capitalize }}</a></li>
                            <li class=""><a href="https://github.com/spyrit/datalea" target="_blank" title="{{ 'about.fork_github' |trans|capitalize}}"><i class="icon-github icon-large"></i>{{ 'menu.github' | trans | capitalize }}</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <li class=""><a href="{{ path('datalea_homepage', {'_locale': 'fr'}) }}" title="{{ 'français'|capitalize }}"><img src="/img/flags/png/fr.png" alt="{{ 'français'|capitalize }}"/></a></li>
                            <li class=""><a href="{{ path('datalea_homepage', {'_locale': 'en'}) }}" title="{{ 'english'|capitalize }}"><img src="/img/flags/png/gb.png" alt="{{ 'english'|capitalize }}"/></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>

        {% block header %}
        <header id="header">
            <div class="container">
                {% block header_content %}

                {% endblock header_content %}
            </div>
        </header>
        {% endblock header %}
            
        {% block main_body %}    
        <div class="container">
            <div class="row-fluid">
                {% block body %}

                {% endblock %}
            </div>
        </div>
        {% endblock main_body %}
            
        <footer id="footer" class="footer">
            <div class="container">
                <p class='mt10'>&copy; 2012-2013<br/>
                    <a href="http://www.spyrit.net" title="www.spyrit.net" target="_blank" class="company">{{ 'Spyrit' }}</a>
                </p>
                <p class='mt10'>{{ 'base.power_by' | trans | capitalize }}</p>
                <ul class="footer-links">
                    <li><a href="https://github.com/fzaninotto/Faker" target="_blank" title="Faker">Faker</a></li>
                    <li class="muted">·</li>
                    <li><a href="http://silex.sensiolabs.org/" target="_blank" title="Silex">Silex</a></li>
                    <li class="muted">·</li>
                    <li><a href="http://twig.sensiolabs.org/" target="_blank" title="Twig">Twig</a></li>
                    <li class="muted">·</li>
                    <li><a href="http://symfony.com/components" target="_blank" title="Symfony2 Components">Symfony2 Components</a></li>
                    <li class="muted">·</li>
                    <li><a href="http://twitter.github.com/bootstrap/" target="_blank" title="Twitter Bootstrap">Twitter Bootstrap</a></li>
                </ul>
            </div>
        </footer>

        <script src="/js/jquery-1.9.1.min.js"></script>
        <script src="/js/jquery-migrate-1.1.0.min.js"></script>
        <script src="/js/bootstrap.min.js"></script>
        <script src="/select2/select2.js"></script>
        <script src="/js/global.js"></script>
        
        {% block javascripts %}

        {% endblock %}

    </body>
</html>
